<div class="home-blog">
  <a class="image" href="{{ article.url }}" style="background-image: url({{ article | img_url: 'large', crop: '295x288' }})">image</a>

  <div class="content">
    <h3 class="title"><a href="{{ article.url }}">{{ article.title }}</a></h3>
    <ul class="blog-meta">
      <li>By - <a href="#">{{ article.author }}</a></li>
      <li>{{ article.published_at | date: "%d %B, %Y" }}</li>
    </ul>
    <div>
      {% if article.excerpt.size > 0 %}
      {{ article.excerpt }}
      {% else %}   
      {{ article.content | truncatewords: 20 }}
      {% endif %}
    </div>
    {% if section.settings.latest_blog_button != '' %}
    <a href="{{ article.url }}" class="read-more">{{ section.settings.latest_blog_button }}</a>
    {% endif %}
  </div>
</div>